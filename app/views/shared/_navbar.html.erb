<nav>
  <!-- Logo -->

  <%# if signed_in? %>
      <!-- home -->

      <%= link_to root_path, class: 'logo' do %>
      <strong>SWING</strong>
      <% end %>


      <!-- search -->
      <%= form_tag(talents_path, method: "get", class: "form-inline") do %>
        <%= text_field_tag 'instrument', nil, placeholder: ' ↳ instrument' %>
        <%= text_field_tag 'where', nil, placeholder: '↳ location' %>
        <%= submit_tag " ⬅︎ Search", class:"form-search" %>
      <% end %>
  <%# end %>

  <% if user_signed_in? %>
    <%= link_to "profil", profile_path(current_user) %>
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn navbar-btn" %>
  <% else %>
    <%= link_to "Inscription", new_user_registration_path, class: "btn navbar-btn" %>
    <%= link_to "Connexion", new_user_session_path, class: "btn navbar-btn" %>
  <% end %>


</nav>
