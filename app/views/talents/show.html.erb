<div class="section-user">
<section id="user">

  <section class="user-picture"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));">
    <%= current_user.email %>
    <div width="72px">
      <%= show_svg('avatar_man.svg') %>
    </div>
  </section>

  <section class="user-descritpion">
    <h1><%= @talent.user.first_name %></h1>
    <p><%= @talent.instrument %></p>
    <p>(3 stars)</p>
    <p><%= @talent.user.description %></p>
    <p><%= @talent.price %></p>
    <h3>Last events</h3>
    <p>
      <% if @reservation.title? %>
      <strong><%= @reservation.title %></strong>
    <% else %>
      <%= "This person didn't join any past event" %>
    <% end %>
  </p>
  </section>
</section>

</div>

<div>
  <h1>Booking</h1>
  <%= simple_form_for [@talent, @reservation] do |f| %>
    <%= f.input :location %>
    <%= f.input :title %>
    <%= f.input :begin_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.button :submit, "Book", class: "btn btn-primary" %>
    <%= f.button :button, "Reset", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>
