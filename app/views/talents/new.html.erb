<div class="section-user">

<section id="user">

  <section class="user-picture"
    style="background-image: url('<%= cl_image_path current_user.photo, crop: :fill %>')">
    <div width="72px">
      <%= show_svg('avatar_man.svg') %>
    </div>
  </section>

  <section class="user-descritpion">
    <h2><%= current_user.first_name %></h2>
    <p>Mettre ici dashboard</p>
  </section>
</section>

<section id="add-a-talent">
<h1>Add a new talent</h1>

  <%= simple_form_for [@talent] do |f| %>
    <%= f.input :instrument %>
    <%= f.input :experience %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "add a talent" %>
  <% end %>
</section>
</div>
