  </section>
</section>

<section id="add-a-talent">
<h1>Add a new talent</h1>

  <%= simple_form_for [@talent] do |f| %>
    <%= f.input :instrument %>
    <%= f.input :experience %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "add a talent" %>
  <% end %>
</section>
</div>
