<section id="user">

  <section class="user-picture"
    style="background-image: url('<%= cl_image_path current_user.photo, crop: :fill %>')">
    <div width="72px">
      <%= show_svg('avatar_man.svg') %>
    </div>
  </section>

  <section class="user-descritpion">
    <h2><%= current_user.first_name %></h2>
